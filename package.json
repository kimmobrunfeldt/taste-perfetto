{
  "name": "perfect-recipes",
  "version": "1.0.0",
  "description": "Collection of recipes aiming for perfection",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kimmobrunfeldt/perfect-recipes.git"
  },
  "keywords": [
    "recipe",
    "recipes",
    "food",
    "perfect",
    "drink"
  ],
  "author": "Kimmo Brunfeldt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kimmobrunfeldt/perfect-recipes/issues"
  },
  "homepage": "https://github.com/kimmobrunfeldt/perfect-recipes#readme",
  "devDependencies": {
    "chokidar-cli": "^1.0.1",
    "concurrently": "^0.1.1",
    "handlebars": "^4.0.3",
    "http-server": "^0.8.5",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-in-place": "^1.3.1",
    "metalsmith-layouts": "^1.4.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.4.0"
  },
  "scripts": {
    "start": "concurrent 'npm run serve' 'npm run watch'",
    "serve": "http-server -c 0 ./build",
    "watch": "npm run build && chokidar './templates/**/*' '*.js' './src/**/*' -c 'npm run build'",
    "build": "node index.js"
  }
}
